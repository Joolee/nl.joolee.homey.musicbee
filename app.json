				},
                "args": [
					{
						"name": "playingStatus",
						"type": "dropdown",
						"values": [
							{
								"id": "Playing",
								"label": {
									"en": "Playing",
									"nl": "Spelen"
								}
							},
							{
								"id": "Paused",
								"label": {
									"en": "Paused",
									"nl": "Gepauzeerd"
								}
							},
							{
								"id": "Stopped",
								"label": {
									"en": "Stopped",
									"nl": "Gestopt"
								}
							}
						]
					},
                    {
                        "name": "device",
                        "type": "device",
                        "filter": "driver_id=musicbee"
                    }
                ]
			},
			{
				"id": "muted",
