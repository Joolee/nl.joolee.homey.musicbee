				},
                "args": [
                    {
                        "name": "device",
                        "type": "device",
                        "filter": "driver_id=musicbee"
                    }
				]
			},
			{
				"id": "set_rating",
				"title": {
					"en": "Set track rating",
					"nl": "Verander rating"
				},
                "args": [
					{
						"name": "rating",
						"type": "number",
						"min": 0,
						"max": 10,
						"placeholder": {
							"en": "Rating in half stars 0-10",
							"nl": "Rating in halve sterren 0-10"
						}
					},
                    {
                        "name": "device",
                        "type": "device",
                        "filter": "driver_id=musicbee"
                    }
				]
			},
			{
