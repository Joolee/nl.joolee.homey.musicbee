                        "filter": "driver_id=musicbee"
                    }
                ]
			},
			{
				"id": "repeat",
				"title": {
					"en": "Repeat state !{{is|is not}}",
					"nl": "Repeatstatus !{{is|is niet}}"
				},
                "args": [
					{
						"name": "repeatStatus",
						"type": "dropdown",
						"values": [
							{
								"id": "None",
								"label": {
									"en": "Off",
									"nl": "Uit"
								}
							},
							{
								"id": "One",
								"label": {
									"en": "One",
									"nl": "Eén"
								}
							},
							{
								"id": "All",
								"label": {
									"en": "All",
									"nl": "Alles"
								}
							}
						]
					},
                    {
                        "name": "device",
                        "type": "device",
                        "filter": "driver_id=musicbee"
                    }
                ]
			},
			{
				"id": "shuffle",
				"title": {
					"en": "Shuffle state !{{is|is not}}",
					"nl": "Shufflestatus !{{is|is niet}}"
				},
                "args": [
					{
						"name": "shuffleStatus",
						"type": "dropdown",
						"values": [
							{
								"id": "shuffle",
								"label": {
									"en": "On",
									"nl": "Aan"
								}
							},
							{
								"id": "off",
								"label": {
									"en": "Off",
									"nl": "Uit"
								}
							},
							{
								"id": "autodj",
								"label": {
									"en": "Auto DJ",
									"nl": "Auto DJ"
								}
							}
						]
					},
                    {
                        "name": "device",
                        "type": "device",
                        "filter": "driver_id=musicbee"
                    }
                ]
			}
		],
		"actions": [
			{
				"id": "play",
				"title": {
					"en": "Play"
				},
                "args": [
                    {
                        "name": "device",
                        "type": "device",
                        "filter": "driver_id=musicbee"
                    }
				]
			},
			{
				"id": "pause",
				"title": {
					"en": "Pause"
				},
                "args": [
                    {
                        "name": "device",
                        "type": "device",
                        "filter": "driver_id=musicbee"
                    }
				]
			},
			{
				"id": "play_pause",
